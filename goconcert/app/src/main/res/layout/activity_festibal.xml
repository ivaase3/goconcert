<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.FestibalActivity"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/chbInteres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="me Interesa" />

    <Button
        android:id="@+id/btCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comprar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre" />

            <TextView
                android:id="@+id/lbSemana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Semana" />

            <TextView
                android:id="@+id/lbDia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dia" />

            <TextView
                android:id="@+id/lbHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora" />

            <TextView
                android:id="@+id/lbPersonas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personas" />

            <TextView
                android:id="@+id/lbPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>